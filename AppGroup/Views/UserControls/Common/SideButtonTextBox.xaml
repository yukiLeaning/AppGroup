<UserControl x:Class="AppGroup.Views.UserControls.Common.SideButtonTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppGroup.Views.UserControls.Common"
             mc:Ignorable="d" 
             Height="{Binding}"
             Width="{Binding}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:SideButtonTextBox_ModelView/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="100"/>
            <ColumnDefinition Width="75"/>
        </Grid.ColumnDefinitions>
        <TextBox
            x:Name="m_TextBox"
            Grid.Column="0"
            Text="{Binding TextBoxText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button
            x:Name="m_Button"
            Grid.Column="1"
            Click="M_Button_Click"/>
    </Grid>
</UserControl>
